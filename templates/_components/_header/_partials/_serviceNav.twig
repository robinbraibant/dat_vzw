{% set serviceNav = craft.navigate.raw('serviceNav') %}
{% set baseUrl = craft.app.config.general.aliases.baseUrl %}

<div class="top-nav-container">
    <div class="top-nav">
        <div class="logo">
            <div class="header-logo">
                <img id="logo" src="{{ baseUrl }}/assets/svg/logo.svg" alt="logo dat vzw"/>
            </div>
        </div>

        {#        Used for mobile nav #}
        <div class="toggler">
            <div class="toggle-icon">
                <div class="line1"></div>
                <div class="line2"></div>
                <div class="line3"></div>
            </div>
            <span>{{ "Menu"|t }}</span>
        </div>

        <div class="top-nav-links">
            {% if contactInfo.instagram|length %}
                <div class="insta-link">
                    <a class="nav-link" target="_blank" rel="nofollow" href="{{ contactInfo.instagram }}">

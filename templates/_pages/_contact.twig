{% extends '_layout.twig' %}

{% set breadcrumbs = [
    entry
] %}

{% block content %}

    {% include "_snippets/_hero/_hero.twig" %}

    <div class="container container--light">
        <div class="row">
            <div class="col-full">
                <div class="leading leading--center">
                    <h2 class="h2 leading__section">{{ "Heb je een vraag voor ons?"|t }}</h2>
                </div>
            </div>
        </div>
        <div class="row row-grid row-center contact__page">
            {% set centers = entry.centers.collect() %}
            {% if centers %}
                <div class="centers">
                    <h3 class="centers__leading">{{ "Onze centra"|t }}</h3>
                    {% for center in centers %}
                        <h4 class="centers__sub-leading">{{ center.centerTitle }}</h4>
                        <div>{{ center.centerName }}</div>
                        <div>{{ center.streetNr }}</div>
                        <div>{{ center.postalCode }} {{ center.town }}</div>
                        <div>
                            <a href="mailto:{{ center.mail }}" class="button button--link">{{ center.mail }}</a>
                        </div>
                        <div class="centers__buttons">
                            <div class="button button--outline-primary">
                                <a href="https://wa.me/{{ center.phone|replace({' ': ''}) }}"
                                   target="_blank" rel="nofollow">{{ center.phone }}</a>
                            </div>
                            <div class="button button--outline-light">
                                <a href="https://maps.google.com/?q={{ center.streetNr }} {{ center.postalCode }} {{ center.town }}" target="_blank" rel="nofollow">{{ "Open Google Maps"|t }}</a>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% endif %}
        </div>
    </div>

    {% include '_snippets/_content/_contentBuilder.twig' with {
        settings: {
            container: 'container--small',
            row: 'row',
            col: 'col-full'
        }
    } %}

{% endblock %}

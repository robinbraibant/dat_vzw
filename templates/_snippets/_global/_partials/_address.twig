{% set centers = contactDetails.centers.collect() %}

{% for center in centers %}
<div class="contactinfo__item">
    {% if center.centerName|length %}
    <div class="contactinfo__line">
        {{ center.centerName }}
    </div>
    {% endif %}
    {% if center.streetNr|length %}
    <div class="contactinfo__line">
        {{ center.streetNr }}
    </div>
    {% endif %}
    {% if center.postalCode|length and center.town|length %}
    <div class="contactinfo__line">
        <span>
            {{ center.postalCode }}
        </span>
        {% endif %}
        {% if center.town|length %}
        <span>
            {{ center.town }}
        </span>
        {% endif %}
    </div>
    {% if center.phone|length %}
        <a class="contactinfo__link" href="tel:{{center.phone}}">
            {{svg('@webroot/assets/icons/phone.svg')}}
            <div class="contactinfo__info">
                {{center.phone}}
            </div>
        </a>
    {% endif %}
    {% if center.email|length %}
        <a class="contactinfo__link" href="mailto:{{center.email}}">
            {{svg('@webroot/assets/icons/mail.svg')}}
            <div class="contactinfo__info">
                {{center.email}}
            </div>
        </a>
    {% endif %}
</div>
{% endfor %}
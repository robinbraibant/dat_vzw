{% set baseUrl = craft.app.config.general.aliases.baseUrl %}

<html>
<head>
    <title>{{ systemName }}</title>
    <style>
        img {
            display: block;
        }
        ul {
            list-style:none;
            padding: 0;
            margin: 0;
        }
        li + li {
            margin-top: 15px;
        }
    </style>
</head>
<body leftmargin="0" topmargin="0" marginheight="0" marginwidth="0" offset="0" bgcolor="#f7f6f4">
<table width="100%" cellpadding="0" cellspacing="0" border="0" bgcolor="#f7f7f7" style="padding: 40px 0;">
    <tr>
        <td valign="top" align="center">
            <table width="580" border="0" cellpadding="20" cellspacing="0" bgcolor="#ffffff" style="background: #ffffff; background-color: #ffffff;">
                <tr style="font-family: Arial, sans-serif; font-size: 16px; line-height: 30px; color: #333333; padding-top:20px">
                    <td width="33%" style="padding-bottom: 20px;"><img src="{{ baseUrl }}/assets/img/logo.png" alt="Logo" title="Logo" border="0" style="width: 190px; max-width: 190px; display: block; border: none;" /></td>
                    <td style="vertical-align: middle; padding-bottom: 20px;">
                        <h2 style="margin: 0; padding: 0;">
                            {% block title %}
                                {{ title ?? '' }}
                            {% endblock %}
                        </h2>
                    </td>
                </tr>
            </table>
            <table width="580" border="0" cellpadding="20" cellspacing="0" bgcolor="#ffffff" style="background: #ffffff; background-color: #ffffff;">
                <tr width="580" align="left" valign="top" style="font-family: Arial, sans-serif; font-size: 16px; line-height: 20px; color: #999999;">
                    <td style="padding:1px 0; background: #f7f7f7"></td>
                </tr>
                <tr style="font-family: Arial, sans-serif; font-size: 16px; line-height: 20px; color: #333333; padding-top:20px">
                    <td>
                        {% block content %}
                            {{ body }}
                        {% endblock %}
                    </td>
                </tr>
                <tr width="580" align="left" valign="top" style="font-family: Arial, sans-serif; font-size: 16px; line-height: 20px; color: #999999;">
                    <td style="padding:1px 0; background: #f7f7f7"></td>
                </tr>
                <tr>
                    <td width="580" align="left" valign="top" style="font-family: Arial, sans-serif; font-size: 16px; line-height: 20px; color: #999999;"><p style="font-family: Arial, sans-serif; font-size: 14px; line-height: 20px; color: #999999;">&copy; {{ "now"|date("Y") }} <a href="{{ siteUrl }}" style="color: #666666; text-decoration: underline">{{ systemName }}</a></td>
                </tr>
            </table>
        </td>
    </tr>
</table>
</body>
</html>